mixin contact(source,link)
  .contacts__item
    if source == 'mail'
      a(class="logo" href=`mailto: ${link}` target="_blank" rel='noreferrer')
        svg.logo__icon
          use(href=`images/icons/icon.svg#icon-${source}`)
        p.contacts__text=source
    else
      a(class="logo" href=`${link}` target="_blank" rel='noreferrer')
        svg.logo__icon
          use(href=`images/icons/icon.svg#icon-${source}`)
        p.contacts__text=source

.contacts
  h2.contacts__title Contact Me
  .contacts-wrapper
    +contact('linkedin','https://www.linkedin.com/in/an-dyk-bui-28733115b/')
    +contact('github','https://github.com/simabui')
    +contact('mail','max_bui@ukr.net')